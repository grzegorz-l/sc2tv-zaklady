<% if @duel %>
<h1>Lista zakładów pojedynku: <%= @duel.team1%> vs <%= @duel.team2%></h1>

<table>
  <tr>
  	<th>Zwycięzca</th>
    <th>Kasa</th>
	<th>Użytkownik</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bets.each do |bet| %>
  <tr>
  	<td><%= bet.winner %></td>
    <td><%= bet.gold %></td>
	<td><%= bet.user.email %></td>
    <td><%= link_to 'Pokaż', duel_bet_path(@duel, bet) %></td>
    <td><%= link_to 'Edytuj', edit_duel_bet_path(@duel, bet) %></td>
    <td><%= link_to 'Usuń', duel_bet_path(@duel, bet), :confirm => 'Jesteś pewien?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%if @duel.date > Time.now%>
<%= link_to 'Nowy zakład', new_duel_bet_path %><br>
<%end%>
<%= link_to 'Wróć', duels_path %>

<%end%>


<% if @user %>
<div id="middle_cont">
<h2>Lista twoich zakładów</h2>

<table border="2" cellpadding="2" cellspacing="0">
  <tr>
  	<th>Pojedynek</th> 
  	<th>Twój typ</th> 
	<th>Kiedy</th> 
    <th>Kasa</th>
    <th></th>
  </tr>

<% @bets.each do |bet| %>
  <tr>
  	<td><%= bet.duel.team1%> vs <%= bet.duel.team2%></td>
  	<td><%= bet.winner %></td>
	<td><%= bet.duel.date %></td>
    <td><%= bet.gold %></td>
    <td><%= link_to 'Usuń', user_bet_path(@user, bet), :confirm => 'Jesteś pewien?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'Wróć', :controller => :home, :action => :user_acc %>

<%end%>
</div>